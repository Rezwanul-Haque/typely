{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Typely",
  "version": "0.1.0",
  "identifier": "com.typely.desktop",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "./dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Typely",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "decorations": true,
        "alwaysOnTop": false,
        "center": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "Â© 2024 Typely Team",
    "shortDescription": "Text expansion made easy",
    "longDescription": "Cross-platform text expansion tool that helps you type faster with custom snippets and triggers.",
    "icon": [
      "icons/16x16.png",
      "icons/20x20.png", 
      "icons/24x24.png",
      "icons/32x32.png",
      "icons/40x40.png",
      "icons/48x48.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [],
    "externalBin": [],
    "targets": "all"
  },
  "plugins": {
    "globalShortcut": {
      "shortcuts": {
        "toggle": "CmdOrCtrl+Shift+T"
      }
    },
    "autostart": {
      "enabled": true
    },
    "notification": {
      "requestPermission": true
    }
  }
}